<h1>All Posts</h1>
<div class="global_container">
<div class="new"><%= link_to 'Create A New Post', new_post_path %></div>

<% @posts.each do |post| %>

<div class="post">

  <div class="title">
    <%= post.title %>
  </div>

  <div class="text">
    <%= post.text %>
  </div>

  <div class="options">
    <div class="show"><%= link_to 'Show', post %></div>
    <div class="edit"><%= link_to 'Edit', edit_post_path(post) %></div>
    <div class="destroy"><%= link_to 'Destroy', post_path(post), method: :delete, data: { confirm: 'Are you sure?' } %></div>
  </div>

</div>

<% end %>